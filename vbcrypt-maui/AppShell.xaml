<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="vbcrypt_maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:vbcrypt_maui"
    Shell.FlyoutBehavior="{OnIdiom Desktop=Locked, Default=Flyout}">

    <ShellContent Title="Encrypt"
        ContentTemplate="{DataTemplate local:EncryptPage}" />
    <ShellContent Title="Decrypt"
        ContentTemplate="{DataTemplate local:DecryptPage}" />

    <Shell.FlyoutFooter>
        <VerticalStackLayout Padding="10">
            <Label Text='Made by Connor "sus" Garcia'
                   HorizontalOptions="Center"/>
        </VerticalStackLayout>
    </Shell.FlyoutFooter>
</Shell>
